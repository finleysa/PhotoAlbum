doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='icon', type='image/png', href='/img/icon.png')
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1=title
    .row
      .small-12.columns
        form#album(action='/albums', method='post', enctype='multipart/form-data')
          fieldset.panel
            legend New Album
            .row
              .small-4.columns
                label: h4 Title
                input(type='text' name='title')
              .small-4.columns
                label: h4 Choose Date
                input(type='date' name='taken')
              .small-4.columns
                label: h4 Cover Image
                input(type='file' name='cover')
                button#insert.small.radius Insert Album

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

