doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Show
    link(rel='icon', type='image/png', href='/img/icon.png')
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body(style='background-image:url("'+background+'"); background-size:cover;')
    .row
      .small-12.columns
        a(href='/') Back
    .row
      .small-12.columns
        form#album(action='/albums', method='post', enctype='multipart/form-data')
          fieldset.panel
            legend Add Photo
            .row
              .small-4.columns
                label: h4 Photo!
                input(type='file' name='photo')
                button.tiny.radius#addphoto Add Photo!

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

